<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/list_item_event_solved_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/list_item_event_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/list_item_event_solved_check_box"
            android:padding="4dp"
            android:textStyle="bold"
            tools:text="Event Title"/>

        <TextView
            android:id="@+id/list_item_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_event_title_text_view"
            android:layout_toLeftOf="@id/list_item_event_solved_check_box"
            android:padding="4dp"
            tools:text="Event Data"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="?attr/colorControlHighlight" />

</RelativeLayout>