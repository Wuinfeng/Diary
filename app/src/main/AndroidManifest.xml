<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.darling.diary">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
                     android:maxSdkVersion="18"/>
    <uses-feature android:name="android.hardware.camera2"
        android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_diary"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_diary_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EventListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EventPagerActivity"
                  android:label="@string/app_name"
                  android:parentActivityName=".EventListActivity">
        </activity>
    </application>

</manifest>